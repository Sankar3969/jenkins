pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh "echo this is build stage"
            }
        }
        stage('Test') {
            steps {
                sh "echo this is Test stage"
            }
        }
        stage('Deploy') {
            steps {
                 sh "echo this is Deploy stage"
            }
        }
    }
    post {
        always{
            echo " this is always block  "
        }
        success{
            echo " this is success block  "
        }
        failure{
            echo " this is failure block  "
        }
    }
}